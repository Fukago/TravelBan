<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/materialdditText_writetopic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:hint="标题"
            app:met_baseColor="#000000"
            app:met_floatingLabel="none"
            app:met_primaryColor="@color/Orange"
            />

        <ImageView
            android:id="@+id/button_writetopic_insert_img"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:src="@drawable/insert_img"
            />


        <!-- todo 加载提交的图片-->
        <ViewStub
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/item_topic_img"
            />


        <EditText
            android:id="@+id/edit_writetopic_content"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:textColor="#000000"
            android:gravity="start"
            android:background="@drawable/write_edittext"
            />

        <Button
            android:id="@+id/button_topic_send"
            android:layout_marginTop="24dp"
            android:background="@color/Orange"
            android:text="确认发送"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />
    </LinearLayout>

</LinearLayout>